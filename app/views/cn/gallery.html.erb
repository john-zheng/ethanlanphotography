<% content_for :js_extra  do %>
	<%= javascript_include_tag "jquery.fancybox.pack", "jquery.fancybox-thumbs" %>
		<script type="text/javascript">

			$(document).ready(function() {
					
				$(".fancybox-thumb").fancybox({
						beforeShow: function () {
		            /* Disable right click */
		            $.fancybox.wrap.bind("contextmenu", function (e) {
		                    return false; 
		            });
			        },
			        padding : 8,
			        closeBtn: false,
			        arrows: true,
							prevEffect	: 'none',
							nextEffect	: 'none',
							helpers	: {
								title	: {
									type: 'outside'
								},
								thumbs	: {
									width	: 80,
									height	: 50
								}
							}

				});

				$.fancybox.play();
			});
		</script>
<% end %>

<% content_for :css_extra  do %>
	<%= stylesheet_link_tag "jquery.fancybox", "jquery.fancybox-thumbs", :media => "all" %>
<% end %>

<div class="gallery-canvas">
	<% @images_full.each do |image| %>
   <%= link_to image_tag("gallery/thumbnail/#{image}", :height => '180'), "/assets/gallery/full/#{image}", :class=>'fancybox-thumb', :rel=>'fancybox-thumb', 
   				:title => image.split(".").first.split('_').map {|t| t.capitalize }.join(' ') %>
 	<% end %>
 	<div style="clear:both;"></div>
</div>